{
    "version": 2,
    "manifest": {
        "$BASE_DIR": "./"
    },
    "node_sets_file": "$BASE_DIR/node_sets.json",
    "networks": {
        "nodes": [
            {
                "nodes_file": "$BASE_DIR/nodes.h5",
                "populations": {
                    "nodeA": {
                        "type": "biophysical",
                        "biophysical_neuron_models_dir": ".",
                        "alternate_morphologies": {
                          "h5v1": "$BASE_DIR/h5"
                        }
                    }
                }
            }
        ],
        "edges": [
            {
                "edges_file": "$BASE_DIR/edges.h5",
                "populations": {
                    "nodeA__nodeA__chemical": {
                        "type": "chemical"
                    }
                }
            }
        ]
    }
}
